<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

    <mapper namespace="com.example.demo.board.notice.NoticeMapper">
    	<select id="getList" parameterType="Pager" resultType="NoticeVO">
    		select * from notice order by num desc
    		limit #{curPage},#{perPage}
    	</select>
    
    	<select id="getSelect" parameterType="BoardVO" resultType="NoticeVO">
    		select * from notice where num=#{num}
    	</select>
    	
    	<select id="setInsert" parameterType="BoardVO">
    		INSERT INTO notice VALUES (NULL, #{title}, #{writer}, #{contents}, NOW(), 0)
    	</select>
    	
    	<update id="setUpdate" parameterType="BoardVO">
    		update notice set title=#{title}, writer=#{writer}, contents=#{contents} where num=#{num}
    	</update>
    	
    	<delete id="setDelete" parameterType="BoardVO">
    		delete notice where num=#{num}
    	</delete>
    </mapper>